<Window x:Class="SimpleApiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleApiApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="401.242" Width="573.476" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,3.6,7">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Orientation="Horizontal" >
            <Button x:Name="btnPrevious" Content="Previous" HorizontalAlignment="Left"  Margin="15" VerticalAlignment="Top" Width="75" Height="24" Click="BtnPrevious_Click"/>
            <Button x:Name="btnSunInfo" Content="Sun Information" HorizontalAlignment="Left"  Margin="15" VerticalAlignment="Top" Width="91" Height="24" RenderTransformOrigin="1.569,-0.494" Click="BtnSunInfo_Click"/>
            <Button x:Name="btnNext" Content="Next" HorizontalAlignment="Left"  Margin="15" VerticalAlignment="Top" Width="75" Height="24" Click="BtnNext_Click"/>
        </StackPanel>

        <Image Grid.Row="1" x:Name="comicImage" Margin="20" />

    </Grid>
</Window>
